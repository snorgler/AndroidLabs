<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="446dp"
        android:layout_height="167dp"
        android:gravity="center"
        android:text="Lab 2 GUI"
        android:textSize="70sp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="134dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="379dp"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:gravity="fill"
        android:text="@string/ButtonText"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="767dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="445dp"
        android:layout_height="195dp"
        android:layout_weight="1"
        android:gravity="fill"
        android:src="@drawable/flag"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="413dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="293dp"
        android:layout_height="192dp"
        android:layout_weight="1"
        android:gravity="fill"
        android:text="@string/SwitchText"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="441dp"
        tools:layout_editor_absoluteY="725dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:hint="@string/EditTextText"
        android:inputType="textPersonName"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="955dp" />

</androidx.constraintlayout.widget.ConstraintLayout>