<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="600"
        android:layout_height="100"
        android:text="Lab 2 GUI"
        android:gravity="center"
        android:textSize="70sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="134dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="fill"
        android:textSize="50sp"
        android:text="@string/ButtonText"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="1067dp" />

    <ImageButton
        android:layout_width="600"
        android:layout_height="300"
        android:layout_weight="1"
        android:gravity="fill"
        android:src="@drawable/flag"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="460dp" />

    <Switch
        android:layout_width="400"
        android:layout_height="200"
        android:layout_weight="1"
        android:gravity="fill"
        android:textSize="30sp"
        android:text="@string/SwitchText"
        tools:layout_editor_absoluteX="500dp"
        tools:layout_editor_absoluteY="1007dp" />

    <EditText
        android:layout_width="900"
        android:layout_height="250"
        android:hint="@string/EditTextText"
        android:inputType="textPersonName"
        android:gravity="center"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="1306dp" />

</androidx.constraintlayout.widget.ConstraintLayout>